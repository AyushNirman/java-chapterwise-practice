public class RotateArray {

    // Method to reverse array from index l to r
    static void reverse(int[] arr, int l, int r) {
        while (l < r) {
            int temp = arr[l];
            arr[l] = arr[r];
            arr[r] = temp;
            l++;
            r--;
        }
    }

    // Rotate array by k steps (right rotation)
    static void rotate(int[] arr, int k) {
        int n = arr.length;

        // 1ï¸âƒ£ Reduce extra rotations if k > n
        k = k % n;

        // 2ï¸âƒ£ Step 1: Reverse the whole array
        // Original: [1, 2, 3, 4, 5], reverse(0,4) â†’ [5, 4, 3, 2, 1]
        reverse(arr, 0, n - 1);

        // 3ï¸âƒ£ Step 2: Reverse first k elements
        // reverse(0, k-1) â†’ reverse(0,1) â†’ [4, 5, 3, 2, 1]
        reverse(arr, 0, k - 1);

        // 4ï¸âƒ£ Step 3: Reverse remaining elements
        // reverse(k, n-1) â†’ reverse(2,4) â†’ [4, 5, 1, 2, 3]
        reverse(arr, k, n - 1);
    }

    public static void main(String[] args) {
        int[] arr = {1, 2, 3, 4, 5};
        int k = 2;

        System.out.println("Original Array:");
        for (int x : arr) System.out.print(x + " ");
        System.out.println("\n");

        rotate(arr, k);

        System.out.println("Array after rotating right by " + k + " positions:");
        for (int x : arr) System.out.print(x + " ");
    }
}






public class RotateArray {

    // Method to reverse array from index l to r
    static void reverse(int[] arr, int l, int r) {
        while (l < r) {
            int temp = arr[l];
            arr[l] = arr[r];
            arr[r] = temp;
            l++;
            r--;
        }
    }

    // Rotate array by k steps
    static void rotate(int[] arr, int k) {
        int n = arr.length;

        k = k % n;          // 1ï¸âƒ£ reduce extra rotations

        reverse(arr, 0, n - 1);     // 2ï¸âƒ£ reverse whole array
        reverse(arr, 0, k - 1);     // 3ï¸âƒ£ reverse first k elements
        reverse(arr, k, n - 1);     // 4ï¸âƒ£ reverse remaining elements
    }

    public static void main(String[] args) {
        int[] arr = {1, 2, 3, 4, 5};
        int k = 2;

        rotate(arr, k);

        for (int x : arr)
            System.out.print(x + " ");
    }
}






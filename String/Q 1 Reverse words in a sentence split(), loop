public class Main {
    public static void main(String[] args) {

        // Step 1: Input string
        String str = "I love Java";

        // Step 2: Split sentence into words using space
        String[] words = str.split(" ");

        // Step 3: Create empty string to store final answer
        String result = "";

        // Step 4: Loop through each word
        for (String word : words) {

            // Step 5: Create empty string to store reversed word
            String rev = "";

            // Step 6: Reverse current word using loop
            for (int i = word.length() - 1; i >= 0; i--) {
                rev = rev + word.charAt(i);
            }

            // Step 7: Add reversed word to result with space
            result = result + rev + " ";
        }

        // Step 8: Print final output (trim removes last extra space)
        System.out.println(result.trim());
    }
}

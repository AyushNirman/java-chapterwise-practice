public class Main {
    public static void main(String[] args) {

        String str = "hellojava";
        String rev = "";

        for (int i = str.length() - 1; i >= 0; i--) {
            rev += str.charAt(i);
        }
        System.out.println(rev);

        // way 2 (best way)
        String rev2 = new StringBuilder(str).reverse().toString();
        System.out.println(rev2);
    }
}
